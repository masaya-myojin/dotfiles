# This file is for WSL2 environment.


### aliases ###

alias ll="ls -la"
alias tmux="tmux -u"
alias vim="nvim"


### completion ###

## git-completion ##
gitcmpl_path=$HOME/git-completion.bash
[ -f $gitcmpl_path ] && source $gitcmpl_path

### git-prompt ###
gitprpt_path=$HOME/git-prompt.sh
if [ -f $gitprpt_path ]; then
  source $gitprpt_path

  GIT_PS1_SHOWDIRTYSTATE=true
  GIT_PS1_SHOWUNTRACKEDFILES=true
  GIT_PS1_SHOWSTASHSTATE=true
  GIT_PS1_SHOWUPSTREAM=auto
  PROMPT_DIRTRIM=2
  PS1='\[\033[92m\]\u@Pengwin:\[\033[96m\]\w\[\033[91m\]$(__git_ps1)\[\033[00m\]\n\$ '
fi


### functions ###

# https://github.com/junegunn/fzf/wiki/examples#changing-directory
# fd - cd to selected directory
fd() {
  local dir
  dir=$(find ${1:-.} -path '*/\.*' -prune \
    -o -type d -print 2> /dev/null | fzf +m) && \
  cd "$dir"
}



### other configurations ###

## anyenv ##
export PATH="$HOME/.anyenv/bin:$PATH"
eval "$(anyenv init -)"


## direnv ##
eval "$(direnv hook bash)"


## deno ##
export DENO_INSTALL="$HOME/.deno"
export PATH="$DENO_INSTALL/bin:$PATH"


if [ -d "$HOME/bin" ]; then
  export PATH="$HOME/bin:$PATH"
fi

if [ -d "$HOME/.local/bin" ]; then
  export PATH="$HOME/.local/bin:$PATH"
fi

export EDITOR=vim
export HISTCONTROL=ignoreboth:erasedups

# http://excid3.com/blog/how-to-fix-esc-in-your-terminal
export LESS="-eirMX"
