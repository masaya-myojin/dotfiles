# This file is for linuxbrew base environment.

## linuxbrew ##
eval $(/home/linuxbrew/.linuxbrew/bin/brew shellenv)



### aliases ###

alias ll="ls -la"
alias tmux="tmux -u"
alias vim="nvim"

# https://github.com/sharkdp/bat
alias cat="bat"



### completion ###

## git-completion ##
gitcmpl_path=/home/linuxbrew/.linuxbrew/etc/bash_completion.d/git-completion.bash
[ -f $gitcmpl_path ] && source $gitcmpl_path

### git-prompt ###
gitprpt_path=/home/linuxbrew/.linuxbrew/etc/bash_completion.d/git-prompt.sh
if [ -f $gitprpt_path ]; then
  source $gitprpt_path

  GIT_PS1_SHOWDIRTYSTATE=true
  GIT_PS1_SHOWUNTRACKEDFILES=true
  GIT_PS1_SHOWSTASHSTATE=true
  GIT_PS1_SHOWUPSTREAM=auto
  PROMPT_DIRTRIM=2
  PS1='\[\033[92m\]\u@WLinux:\[\033[96m\]\w\[\033[91m\]$(__git_ps1)\[\033[00m\]\n\$ '
fi


### functions ###

# https://github.com/junegunn/fzf/wiki/examples#changing-directory
# fd - cd to selected directory
fd() {
  local dir
  dir=$(find ${1:-.} -path '*/\.*' -prune \
    -o -type d -print 2> /dev/null | fzf +m) && \
  cd "$dir"
}



### other configurations ###

## anyenv ##
eval "$(anyenv init -)"


## direnv ##
eval "$(direnv hook bash)"


## z ##
z_path=/home/linuxbrew/.linuxbrew/Cellar/z/1.9/etc/profile.d/z.sh
[ -f $z_path ] && source $z_path


export GOPATH=$HOME

if [ -d "$HOME/bin" ]; then
  export PATH="$HOME/bin:$PATH"
fi

if [ -d "$HOME/.local/bin" ]; then
  export PATH="$HOME/.local/bin:$PATH"
fi

export EDITOR=vim
export HISTCONTROL=ignoreboth:erasedups

# http://excid3.com/blog/how-to-fix-esc-in-your-terminal
export LESS="-eirMX"

